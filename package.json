{
  "name": "botframework",
  "version": "1.0.0",
  "description": "Common functionality for building bots (containerized microservices with a specific set of API calls) for integration with the Menome stack",
  "main": "index.js",
  "scripts": {
    "start": "[ \"$NODE_ENV\" = \"production\" ] && npm run prod || npm run dev",
    "dev": "node ./node_modules/nodemon/bin/nodemon.js sample/app.js",
    "prod": "./node_modules/forever/bin/forever --minUptime 5000 --spinSleepTime 1000 sample/app.js",
    "test": "./node_modules/mocha/bin/mocha -C test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/menome/botframework.git"
  },
  "keywords": [
    "docker",
    "container",
    "message",
    "rabbit",
    "microservice",
    "rest",
    "api"
  ],
  "author": "Menome Technologies Inc.",
  "license": "Commercial",
  "devDependencies": {
    "mocha": "^3.4.2",
    "chai": "^4.1.0",
    "nodemon": "latest",
    "mock-require": "^2.0.1"
  },
  "dependencies": {
    "forever": "latest",
    "express": "latest",
    "ajv": "^5.2.2",
    "amqplib": "^0.5.1",
    "request": "latest",
    "request-promise": "latest",
    "neo4j-driver": "^1.4.1",
    "uuid": "^3.1.0"
  },
  "bugs": {
    "url": "https://github.com/menome/botframework/issues"
  },
  "homepage": "https://github.com/menome/botframework#readme"
}
